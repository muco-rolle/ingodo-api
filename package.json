{
    "name": "ingodo-api",
    "version": "0.1.0",
    "description": "Manage your income and expenses easily",
    "main": "main.js",
    "author": "Muco Tresor <mucotresor@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": "12.18.3"
    },
    "scripts": {
        "start": "NODE_ENV=production ts-node --transpile-only  -r tsconfig-paths/register src/main.ts",
        "start:dev": "NODE_ENV=development nodemon",
        "start:prod": "NODE_ENV=production node -r ./bootstrap.js ./build/main.js",
        "start:build": "tsc",
        "clean": "rimraf build",
        "lint": "./node_modules/.bin/eslint src --ext .js,.jsx,.ts,.tsx",
        "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
        "prettier": "prettier  \"./src/**/*.ts\"",
        "prettier:check": "npm run prettier -- --list-different",
        "prettier:write": "npm run prettier -- --write",
        "test": "cross-env NODE_ENV=test jest --coverage",
        "test:watch": "npm run test -- --watch",
        "generate": "graphql-codegen --config codegen.yml"
    },
    "dependencies": {
        "apollo-server-express": "^2.15.1",
        "bcryptjs": "^2.4.3",
        "dotenv": "^6.2.0",
        "dotenv-expand": "^5.1.0",
        "express": "^4.17.1",
        "graphql": "^15.3.0",
        "graphql-directives-middlewares": "^0.2.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.25",
        "ts-node": "^9.0.0",
        "signale": "^1.4.0",
        "tsconfig-paths": "^3.7.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "1.17.0",
        "@graphql-codegen/introspection": "1.17.0",
        "@graphql-codegen/typescript": "^1.17.0",
        "@graphql-codegen/typescript-document-nodes": "1.17.0",
        "@graphql-codegen/typescript-mongodb": "1.17.0",
        "@graphql-codegen/typescript-resolvers": "1.17.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.7",
        "@types/jest": "^24.9.0",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongoose": "^5.7.32",
        "@types/node": "^13.1.8",
        "@types/signale": "^1.4.1",
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/eslint-plugin-tslint": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "cross-env": "^5.2.0",
        "eslint": "^6.8.0",
        "jest": "^24.9.0",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "rimraf": "^2.6.2",
        "ts-jest": "^24.3.0",
        "typescript": "^3.7.5"
    }
}
